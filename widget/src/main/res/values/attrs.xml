<?xml version="1.0" encoding="UTF-8"?>
<resources>
    <declare-styleable name="RippleView">
        <attr name="rv_alpha" format="integer" />
        <attr name="rv_framerate" format="integer" />
        <attr name="rv_rippleDuration" format="integer" />
        <attr name="rv_zoomDuration" format="integer" />
        <attr name="rv_color" format="color" />
        <attr name="rv_centered" format="boolean" />
        <attr name="rv_type" format="enum">
            <enum name="simpleRipple" value="0" />
            <enum name="doubleRipple" value="1" />
            <enum name="rectangle" value="2" />
        </attr>
        <attr name="rv_ripplePadding" format="dimension" />
        <attr name="rv_zoom" format="boolean" />
        <attr name="rv_zoomScale" format="float" />
    </declare-styleable>

    <declare-styleable name="Button">
        <attr name="borderColor" format="color" />
        <attr name="defaultColor" format="color" />
        <attr name="disableColor" format="color" />
        <attr name="rippleColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="disableDoubleClick" format="boolean" />
        <attr name="clickDelay" format="integer" />
        <attr name="drawableLeftCompat" format="reference" />
        <attr name="drawableRightCompat" format="reference" />
        <attr name="drawableTopCompat" format="reference" />
        <attr name="drawableBottomCompat" format="reference" />
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="foreground" format="color" />
        <attr name="ripple" format="boolean" />
        <attr name="square" format="boolean" />
        <attr name="disableDoubleClick" />
        <attr name="clickDelay" />
    </declare-styleable>

    <declare-styleable name="CustomTextInputLayout">
        <attr name="isRtl" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CustomEditText">
        <!--<attr name="drawableLeftCompat" format="reference" />-->
        <!--<attr name="drawableRightCompat" format="reference" />-->
        <!--<attr name="drawableTopCompat" format="reference" />-->
        <!--<attr name="drawableBottomCompat" format="reference" />-->
        <attr name="typeface" format="enum">
            <enum name="IranYekan" value="0" />
            <enum name="Consolas" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="NumberStepper">
        <attr name="stepValue" format="integer" />
        <attr name="defValue" format="integer" />
        <attr name="minValue" format="integer" />
        <attr name="maxValue" format="integer" />
        <attr name="editable" format="boolean" />
        <attr name="vibrate" format="boolean" />
        <attr name="color" format="color" />
    </declare-styleable>

</resources>
